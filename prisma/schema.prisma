generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Strategy {
  id        Int      @id @default(autoincrement())
  type      String
  name      String?
  bot       String?
  tags      String?
  webhook   String?
  trades    Trade[]
  createdAt DateTime @default(now())
}

model Trade {
  id         Int      @id @default(autoincrement())
  strategy   Strategy @relation(fields: [strategyId], references: [id])
  strategyId Int
  symbol     String
  entry      Float
  leverage   Int
  current    Float
  pnl        Float
  pnlPercent Float
  win        Boolean
  createdAt  DateTime @default(now())
} 